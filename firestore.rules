rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isOwnReport(data) {
      return isSignedIn() && data.createdBy == request.auth.uid;
    }

    match /users/{uid} {
      allow create: if isSelf(uid);
      allow read, update: if isSelf(uid);
      allow delete: if false;
    }

    match /reports/{reportId} {
      allow read: if isOwnReport(resource.data);
      allow create: if isSignedIn() && isOwnReport(request.resource.data);
      allow update, delete: if isOwnReport(resource.data);

      match /updates/{updateId} {
        allow read, write: if isOwnReport(
          get(/databases/$(database)/documents/reports/$(reportId)).data
        );
      }
    }
  }
}
